<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
  <xs:element name="igs">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="parameters" minOccurs="1" maxOccurs="1">
          <xs:annotation>
            <xs:documentation>Interactive Graphics Stream common parameters.</xs:documentation>
          </xs:annotation>
          <xs:complexType>
            <xs:sequence>
              <xs:element name="video" minOccurs="0" maxOccurs="1">
                <xs:annotation>
                  <xs:documentation>Video sequence properties.</xs:documentation>
                </xs:annotation>
                <xs:complexType>
                  <xs:annotation>
                    <xs:documentation>Possible &lt;width&gt;x&lt;height&gt; arguments values combination are: 720x480, 720x576, 1280x720, 1440x1080 and 1920x1080.</xs:documentation>
                  </xs:annotation>
                  <xs:sequence/>
                  <xs:attribute name="width" use="optional" default="1920">
                    <xs:annotation>
                      <xs:documentation>IGS associated video height in pixels (1920, 1440, 1280 or 720).</xs:documentation>
                    </xs:annotation>
                    <xs:simpleType>
                      <xs:restriction base="xs:string">
                        <xs:enumeration value="720"/>
                        <xs:enumeration value="1280"/>
                        <xs:enumeration value="1440"/>
                        <xs:enumeration value="1920"/>
                      </xs:restriction>
                    </xs:simpleType>
                  </xs:attribute>
                  <xs:attribute name="height" use="optional" default="1080">
                    <xs:annotation>
                      <xs:documentation>IGS associated video height in pixels (1080, 720, 480 or 576).</xs:documentation>
                    </xs:annotation>
                    <xs:simpleType>
                      <xs:restriction base="xs:string">
                        <xs:enumeration value="480"/>
                        <xs:enumeration value="576"/>
                        <xs:enumeration value="720"/>
                        <xs:enumeration value="1080"/>
                      </xs:restriction>
                    </xs:simpleType>
                  </xs:attribute>
                  <xs:attribute name="framerate" use="optional" default="23.976">
                    <xs:annotation>
                      <xs:documentation>Frame-rate value per second (23.976, 24, 25, 29.970, 50 or 59.940).</xs:documentation>
                    </xs:annotation>
                    <xs:simpleType>
                      <xs:restriction base="xs:string">
                        <xs:enumeration value="23.976"/>
                        <xs:enumeration value="24"/>
                        <xs:enumeration value="25"/>
                        <xs:enumeration value="29.970"/>
                        <xs:enumeration value="50"/>
                        <xs:enumeration value="59.940"/>
                      </xs:restriction>
                    </xs:simpleType>
                  </xs:attribute>
                </xs:complexType>
              </xs:element>
              <xs:element name="uop" minOccurs="0" maxOccurs="1" type="uopType">
                <xs:annotation>
                  <xs:documentation>User Operations permission common mask, this mask is applied to each page. Define commands user can perform or not.</xs:documentation>
                </xs:annotation>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="composition" minOccurs="1" maxOccurs="1">
          <xs:annotation>
            <xs:documentation>Interactive Graphics Stream compositions definition.</xs:documentation>
          </xs:annotation>
          <xs:complexType>
            <xs:sequence>
              <xs:element name="composition_descriptor" maxOccurs="1" minOccurs="1">
                <xs:annotation>
                  <xs:documentation>Composition descriptor parameters.</xs:documentation>
                </xs:annotation>
                <xs:complexType>
                  <xs:attribute name="state" use="optional" default="EpochStart">
                    <xs:annotation>
                      <xs:documentation>Type of the display set containing the composition, possible values are "NormalCase", "AcquisitionPoint", "EpochStart" and "EpochContinue".</xs:documentation>
                    </xs:annotation>
                    <xs:simpleType>
                      <xs:restriction base="xs:string">
                        <xs:enumeration value="NormalCase">
                          <xs:annotation>
                            <xs:documentation>The composition only contains updated elements from a previous composition in a Epoch Start display set.</xs:documentation>
                          </xs:annotation>
                        </xs:enumeration>
                        <xs:enumeration value="AcquisitionPoint">
                          <xs:annotation>
                            <xs:documentation>The composition contains all elements needed for the next composition.</xs:documentation>
                          </xs:annotation>
                        </xs:enumeration>
                        <xs:enumeration value="EpochStart">
                          <xs:annotation>
                            <xs:documentation>The composition is the first of a new epoch and contains all elements for the next composition.</xs:documentation>
                          </xs:annotation>
                        </xs:enumeration>
                        <xs:enumeration value="EpochContinue">
                          <xs:annotation>
                            <xs:documentation>The composition is part of a epoch started from a previous graphics stream after a seamless connection and contains all elements for the next composition.</xs:documentation>
                          </xs:annotation>
                        </xs:enumeration>
                      </xs:restriction>
                    </xs:simpleType>
                  </xs:attribute>
                </xs:complexType>
              </xs:element>
              <xs:element name="parameters" maxOccurs="1" minOccurs="0">
                <xs:annotation>
                  <xs:documentation>Composition parameters.</xs:documentation>
                </xs:annotation>
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="time_out_pts">
                      <xs:annotation>
                        <xs:documentation>Time-out values.</xs:documentation>
                      </xs:annotation>
                      <xs:complexType>
                        <xs:sequence/>
                        <xs:attribute name="composition" use="optional" default="0">
                          <xs:annotation>
                            <xs:documentation>Only if User Interface Model is set to "Pop-Up", set the end time of the Display Period containing the composition in 90kHz clock ticks, at which the composition is no longer displayed. If this value is 0, the Display Period is never "timed-out".</xs:documentation>
                          </xs:annotation>
                          <xs:simpleType>
                            <xs:restriction base="xs:unsignedLong">
                              <xs:minInclusive value="0"/>
                              <xs:maxInclusive value="8589934591"/>
                            </xs:restriction>
                          </xs:simpleType>
                        </xs:attribute>
                        <xs:attribute name="selection" use="optional" default="0">
                          <xs:annotation>
                            <xs:documentation>Only if User Interface Model is set to "Pop-Up", set the selection end time of Display Period containing the composition in 90kHz clock ticks, at which the user can no longer select or activate buttons. If this value is 0, the selection Display Period is never "timed-out".</xs:documentation>
                          </xs:annotation>
                          <xs:simpleType>
                            <xs:restriction base="xs:unsignedLong">
                              <xs:minInclusive value="0"/>
                              <xs:maxInclusive value="8589934591"/>
                            </xs:restriction>
                          </xs:simpleType>
                        </xs:attribute>
                        <xs:attribute name="user" use="optional" default="0">
                          <xs:annotation>
                            <xs:documentation>Set the duration after the last user operation at which the current composition page is timed-out. If this value is 0, the page is not timed out after user inactivity.</xs:documentation>
                          </xs:annotation>
                          <xs:simpleType>
                            <xs:restriction base="xs:unsignedInt">
                              <xs:minInclusive value="0"/>
                              <xs:maxInclusive value="16777215"/>
                            </xs:restriction>
                          </xs:simpleType>
                        </xs:attribute>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="model">
                      <xs:annotation>
                        <xs:documentation>Composition muxing and displaying models modes.</xs:documentation>
                      </xs:annotation>
                      <xs:complexType>
                        <xs:attribute name="stream" use="optional" default="OoM">
                          <xs:annotation>
                            <xs:documentation>Composition muxing mode, if set as "Multiplexed", the IGS is to be muxed with other (video, audio...) streams in the same clip. If set as "OoM", Out-of-Mux, the IGS is muxed solely in its own clip and used as a SubPath clip in playlists.</xs:documentation>
                          </xs:annotation>
                          <xs:simpleType>
                            <xs:restriction base="xs:string">
                              <xs:enumeration value="OoM"/>
                              <xs:enumeration value="Multiplexed"/>
                            </xs:restriction>
                          </xs:simpleType>
                        </xs:attribute>
                        <xs:attribute name="user_interface" default="Normal">
                          <xs:annotation>
                            <xs:documentation>Composition User Interface Model type. If set as "Normal", the menu is used as a always-on screen menu. If set as "Pop-Up", composition is used as a Pop-Up menu. .</xs:documentation>
                          </xs:annotation>
                          <xs:simpleType>
                            <xs:restriction base="xs:string">
                              <xs:enumeration value="Normal"/>
                              <xs:enumeration value="Pop-Up"/>
                            </xs:restriction>
                          </xs:simpleType>
                        </xs:attribute>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="reference_imgs" maxOccurs="1" minOccurs="0">
                <xs:annotation>
                  <xs:documentation>Define reference picture. References pictures can be refered by their defined name and cropped. E.g. this allows to use the same picture file with every frame of an animation, declared as a reference picture and crop it back in buttons.</xs:documentation>
                </xs:annotation>
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="img" maxOccurs="unbounded" minOccurs="0">
                      <xs:annotation>
                        <xs:documentation>Reference picture definition.</xs:documentation>
                      </xs:annotation>
                      <xs:complexType>
                        <xs:attribute name="name" type="xs:string" use="required">
                          <xs:annotation>
                            <xs:documentation>Picture unique name, used as a identifier.</xs:documentation>
                          </xs:annotation>
                        </xs:attribute>
                        <xs:attribute name="path" type="xs:string" use="required">
                          <xs:annotation>
                            <xs:documentation>Picture file path.</xs:documentation>
                          </xs:annotation>
                        </xs:attribute>
                        <xs:attribute name="cutting_x" use="optional" default="0">
                          <xs:annotation>
                            <xs:documentation>Horizontal cutting offset in pixels (e.g. "10" means the 10px at the left will be cutted-off).</xs:documentation>
                          </xs:annotation>
                          <xs:simpleType>
                            <xs:restriction base="xs:integer">
                              <xs:minInclusive value="0"/>
                              <xs:maxInclusive value="4294967296"/>
                            </xs:restriction>
                          </xs:simpleType>
                        </xs:attribute>
                        <xs:attribute name="cutting_y" use="optional" default="0">
                          <xs:annotation>
                            <xs:documentation>Vertical cutting offset in pixels (e.g. "10" means the 10px at the top will be cutted-off).</xs:documentation>
                          </xs:annotation>
                          <xs:simpleType>
                            <xs:restriction base="xs:integer">
                              <xs:minInclusive value="0"/>
                              <xs:maxInclusive value="4294967296"/>
                            </xs:restriction>
                          </xs:simpleType>
                        </xs:attribute>
                        <xs:attribute name="width" default="0" use="optional">
                          <xs:annotation>
                            <xs:documentation>Horizontal size in pixels (e.g "10" means the picture horizontal size is limited to 10 pixels, the remaining pixels at right are cutted-off).</xs:documentation>
                          </xs:annotation>
                          <xs:simpleType>
                            <xs:restriction base="xs:integer">
                              <xs:minInclusive value="0"/>
                              <xs:maxInclusive value="4294967296"/>
                            </xs:restriction>
                          </xs:simpleType>
                        </xs:attribute>
                        <xs:attribute name="height" use="optional" default="0">
                          <xs:annotation>
                            <xs:documentation>Vertical size in pixels (e.g "10" means the picture vertical size is limited to 10 pixels, the remaining pixels at bottom are cutted-off).</xs:documentation>
                          </xs:annotation>
                          <xs:simpleType>
                            <xs:restriction base="xs:integer">
                              <xs:minInclusive value="0"/>
                              <xs:maxInclusive value="4294967296"/>
                            </xs:restriction>
                          </xs:simpleType>
                        </xs:attribute>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="page" maxOccurs="255" minOccurs="1">
                <xs:annotation>
                  <xs:documentation>Composition pages.</xs:documentation>
                </xs:annotation>
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="parameters" maxOccurs="1" minOccurs="0">
                      <xs:annotation>
                        <xs:documentation>Page associated parameters.</xs:documentation>
                      </xs:annotation>
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="uop" type="uopType" maxOccurs="1" minOccurs="0">
                            <xs:annotation>
                              <xs:documentation>Page specific user-operations restriction mask.</xs:documentation>
                            </xs:annotation>
                          </xs:element>
                          <xs:element name="animation_frame_rate_code" default="0" maxOccurs="1" minOccurs="0">
                            <xs:annotation>
                              <xs:documentation>Animations frame-rate divisor used to compute animations frame-rate according to video frame-rate (e.g. if video framerate is set to 30 fps, and this value to 2, animations will be reproduced at 15 fps).</xs:documentation>
                            </xs:annotation>
                            <xs:simpleType>
                              <xs:restriction base="xs:unsignedByte">
                                <xs:minInclusive value="0"/>
                                <xs:maxInclusive value="255"/>
                              </xs:restriction>
                            </xs:simpleType>
                          </xs:element>
                          <xs:element name="default_selected_button" maxOccurs="1" minOccurs="0">
                            <xs:annotation>
                              <xs:documentation>Initially selected button ID at composition reproduction start. This ID must be one of the page BOGs default selected button ID. If this value is set to 65535 (0xFFFF), no button shall be selected automatically. By default, this value is set to the first defined button in the first BOG (if present).</xs:documentation>
                            </xs:annotation>
                            <xs:simpleType>
                              <xs:restriction base="xs:unsignedShort">
                                <xs:minInclusive value="0"/>
                                <xs:maxInclusive value="65535"/>
                              </xs:restriction>
                            </xs:simpleType>
                          </xs:element>
                          <xs:element name="default_activated_button" default="65535" maxOccurs="1" minOccurs="0">
                            <xs:annotation>
                              <xs:documentation>Button ID activated by default at selection time-out. If this value is 65534 (0xFFFE), the button selected at the selection time-out is activated. If this value is 65535 (0xFFFF), no button is automatically activated. Otherwise, the specified button ID must be part of the page</xs:documentation>
                            </xs:annotation>
                            <xs:simpleType>
                              <xs:restriction base="xs:unsignedShort">
                                <xs:minInclusive value="0"/>
                                <xs:maxInclusive value="65535"/>
                              </xs:restriction>
                            </xs:simpleType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="in_effects" type="xs:string" maxOccurs="1" minOccurs="0">
                      <xs:annotation>
                        <xs:documentation>Page In-Effects, TODO, not currently implemented.</xs:documentation>
                      </xs:annotation>
                    </xs:element>
                    <xs:element name="out_effects" type="xs:string" maxOccurs="1" minOccurs="0">
                      <xs:annotation>
                        <xs:documentation>Page Out-Effects, TODO, not currently implemented.</xs:documentation>
                      </xs:annotation>
                    </xs:element>
                    <xs:element name="bog" maxOccurs="255" minOccurs="0">
                      <xs:annotation>
                        <xs:documentation>Page associated Button Overlap Groups.</xs:documentation>
                      </xs:annotation>
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="default_valid_button" default="65535" maxOccurs="1" minOccurs="0">
                            <xs:annotation>
                              <xs:documentation>Define the button displayed by default in the BOG by its ID, meaning used button ID must be part of the BOG. If this value is 0xFFFF (65535), no button from the BOG shall be displayed. By default, this value is set to the ID of the first button.</xs:documentation>
                            </xs:annotation>
                            <xs:simpleType>
                              <xs:restriction base="xs:unsignedShort">
                                <xs:minInclusive value="0"/>
                                <xs:maxInclusive value="65535"/>
                              </xs:restriction>
                            </xs:simpleType>
                          </xs:element>
                          <xs:element name="button" maxOccurs="255" minOccurs="1">
                            <xs:complexType>
                              <xs:sequence>
                                <xs:element name="button_numeric_select_value" default="65535" maxOccurs="1" minOccurs="0">
                                  <xs:annotation>
                                    <xs:documentation>Button numeric selection value (allows to turn the button as selected by entering this value on the remote).</xs:documentation>
                                  </xs:annotation>
                                  <xs:simpleType>
                                    <xs:restriction base="xs:unsignedShort">
                                      <xs:minInclusive value="0"/>
                                      <xs:maxInclusive value="65535"/>
                                    </xs:restriction>
                                  </xs:simpleType>
                                </xs:element>
                                <xs:element name="auto_action_flag" type="xs:boolean" default="false" maxOccurs="1" minOccurs="0">
                                  <xs:annotation>
                                    <xs:documentation>Auto-activation mode. If this value is "true", the button is automatically activated when selected. Otherwise, if this value is "false", the button needs to be activated manually by the user.</xs:documentation>
                                  </xs:annotation>
                                </xs:element>
                                <xs:element name="horizontal_position" maxOccurs="1" minOccurs="1">
                                  <xs:annotation>
                                    <xs:documentation>On screen button top left horizontal position in pixels.</xs:documentation>
                                  </xs:annotation>
                                  <xs:simpleType>
                                    <xs:restriction base="xs:unsignedShort">
                                      <xs:minInclusive value="0"/>
                                      <xs:maxInclusive value="65535"/>
                                    </xs:restriction>
                                  </xs:simpleType>
                                </xs:element>
                                <xs:element name="vertical_position" maxOccurs="1" minOccurs="1">
                                  <xs:annotation>
                                    <xs:documentation>On screen button top left vertical position in pixels.</xs:documentation>
                                  </xs:annotation>
                                  <xs:simpleType>
                                    <xs:restriction base="xs:unsignedShort">
                                      <xs:minInclusive value="0"/>
                                      <xs:maxInclusive value="65535"/>
                                    </xs:restriction>
                                  </xs:simpleType>
                                </xs:element>
                                <xs:element name="neighbor_info" maxOccurs="1" minOccurs="0">
                                  <xs:annotation>
                                    <xs:documentation>Button neighbor buttons definition.</xs:documentation>
                                  </xs:annotation>
                                  <xs:complexType>
                                    <xs:sequence>
                                      <xs:element name="upper_button" maxOccurs="1" minOccurs="0">
                                        <xs:annotation>
                                          <xs:documentation>"Upper" neighbor button ID, selected when the Up arrow button is used.</xs:documentation>
                                        </xs:annotation>
                                        <xs:simpleType>
                                          <xs:restriction base="xs:unsignedShort">
                                            <xs:minInclusive value="0"/>
                                            <xs:maxInclusive value="65535"/>
                                          </xs:restriction>
                                        </xs:simpleType>
                                      </xs:element>
                                      <xs:element name="lower_button" maxOccurs="1" minOccurs="0">
                                        <xs:annotation>
                                          <xs:documentation>"Lower" neighbor button ID, selected when the Down arrow button is used.</xs:documentation>
                                        </xs:annotation>
                                        <xs:simpleType>
                                          <xs:restriction base="xs:unsignedShort">
                                            <xs:minInclusive value="0"/>
                                            <xs:maxInclusive value="65535"/>
                                          </xs:restriction>
                                        </xs:simpleType>
                                      </xs:element>
                                      <xs:element name="left_button" maxOccurs="1" minOccurs="0">
                                        <xs:annotation>
                                          <xs:documentation>"Left" neighbor button ID, selected when the Left arrow button is used.</xs:documentation>
                                        </xs:annotation>
                                        <xs:simpleType>
                                          <xs:restriction base="xs:unsignedShort">
                                            <xs:minInclusive value="0"/>
                                            <xs:maxInclusive value="65535"/>
                                          </xs:restriction>
                                        </xs:simpleType>
                                      </xs:element>
                                      <xs:element name="right_button" maxOccurs="1" minOccurs="0">
                                        <xs:annotation>
                                          <xs:documentation>"Right" neighbor button ID, selected when the Right arrow button is used.</xs:documentation>
                                        </xs:annotation>
                                        <xs:simpleType>
                                          <xs:restriction base="xs:unsignedShort">
                                            <xs:minInclusive value="0"/>
                                            <xs:maxInclusive value="65535"/>
                                          </xs:restriction>
                                        </xs:simpleType>
                                      </xs:element>
                                    </xs:sequence>
                                  </xs:complexType>
                                </xs:element>
                                <xs:element name="normal_state_info" maxOccurs="1" minOccurs="0">
                                  <xs:annotation>
                                    <xs:documentation>Normal state graphics.</xs:documentation>
                                  </xs:annotation>
                                  <xs:complexType>
                                    <xs:sequence>
                                      <xs:element name="graphic" maxOccurs="1" minOccurs="0">
                                        <xs:annotation>
                                          <xs:documentation>Normal state graphics definition.</xs:documentation>
                                        </xs:annotation>
                                        <xs:complexType>
                                          <xs:sequence>
                                            <xs:element name="ref_pic" minOccurs="0" maxOccurs="unbounded">
                                              <xs:complexType>
                                                <xs:attribute name="name" type="xs:string" use="required"/>
                                                <xs:attribute name="cutting_x" use="optional" default="0">
                                                  <xs:simpleType>
                                                    <xs:restriction base="xs:integer">
                                                      <xs:minInclusive value="0"/>
                                                      <xs:maxInclusive value="4294967296"/>
                                                    </xs:restriction>
                                                  </xs:simpleType>
                                                </xs:attribute>
                                                <xs:attribute name="cutting_y" use="optional" default="0">
                                                  <xs:simpleType>
                                                    <xs:restriction base="xs:integer">
                                                      <xs:minInclusive value="0"/>
                                                      <xs:maxInclusive value="4294967296"/>
                                                    </xs:restriction>
                                                  </xs:simpleType>
                                                </xs:attribute>
                                                <xs:attribute name="width" use="optional" default="0">
                                                  <xs:simpleType>
                                                    <xs:restriction base="xs:integer">
                                                      <xs:minInclusive value="0"/>
                                                      <xs:maxInclusive value="4294967296"/>
                                                    </xs:restriction>
                                                  </xs:simpleType>
                                                </xs:attribute>
                                                <xs:attribute name="height" use="optional" default="0">
                                                  <xs:simpleType>
                                                    <xs:restriction base="xs:integer">
                                                      <xs:minInclusive value="0"/>
                                                      <xs:maxInclusive value="4294967296"/>
                                                    </xs:restriction>
                                                  </xs:simpleType>
                                                </xs:attribute>
                                              </xs:complexType>
                                            </xs:element>
                                            <xs:element name="img" minOccurs="0" maxOccurs="unbounded">
                                              <xs:complexType>
                                                <xs:attribute name="path" type="xs:string" use="required"/>
                                                <xs:attribute name="cutting_x" use="optional" default="0">
                                                  <xs:simpleType>
                                                    <xs:restriction base="xs:integer">
                                                      <xs:minInclusive value="0"/>
                                                      <xs:maxInclusive value="4294967296"/>
                                                    </xs:restriction>
                                                  </xs:simpleType>
                                                </xs:attribute>
                                                <xs:attribute name="cutting_y" use="optional" default="0">
                                                  <xs:simpleType>
                                                    <xs:restriction base="xs:integer">
                                                      <xs:minInclusive value="0"/>
                                                      <xs:maxInclusive value="4294967296"/>
                                                    </xs:restriction>
                                                  </xs:simpleType>
                                                </xs:attribute>
                                                <xs:attribute name="width" use="optional" default="0">
                                                  <xs:simpleType>
                                                    <xs:restriction base="xs:integer">
                                                      <xs:minInclusive value="0"/>
                                                      <xs:maxInclusive value="4294967296"/>
                                                    </xs:restriction>
                                                  </xs:simpleType>
                                                </xs:attribute>
                                                <xs:attribute name="height" use="optional" default="0">
                                                  <xs:simpleType>
                                                    <xs:restriction base="xs:integer">
                                                      <xs:minInclusive value="0"/>
                                                      <xs:maxInclusive value="4294967296"/>
                                                    </xs:restriction>
                                                  </xs:simpleType>
                                                </xs:attribute>
                                              </xs:complexType>
                                            </xs:element>
                                          </xs:sequence>
                                        </xs:complexType>
                                      </xs:element>
                                      <xs:element name="repeat_flag" type="xs:boolean" maxOccurs="1" minOccurs="0" default="false">
                                        <xs:annotation>
                                          <xs:documentation>Animation sequence repeating flag. If this value is "true", the button animation sequence is continuously repeated.</xs:documentation>
                                        </xs:annotation>
                                      </xs:element>
                                      <xs:element name="complete_flag" type="xs:boolean" maxOccurs="1" minOccurs="0" default="false">
                                        <xs:annotation>
                                          <xs:documentation>Animation sequence completion flag. If this value is "true", the button animation sequence is completed prior switching to selected state. Otherwise, if "false", the animation display is aborted.</xs:documentation>
                                        </xs:annotation>
                                      </xs:element>
                                    </xs:sequence>
                                  </xs:complexType>
                                </xs:element>
                                <xs:element name="selected_state_info" maxOccurs="1" minOccurs="0">
                                  <xs:annotation>
                                    <xs:documentation>Selected state graphics.</xs:documentation>
                                  </xs:annotation>
                                  <xs:complexType>
                                    <xs:sequence>
                                      <xs:element name="sound_id" maxOccurs="1" minOccurs="0" default="255">
                                        <xs:annotation>
                                          <xs:documentation>Sound id played when the button switches to selected state.</xs:documentation>
                                        </xs:annotation>
                                        <xs:simpleType>
                                          <xs:restriction base="xs:unsignedByte">
                                            <xs:minInclusive value="0"/>
                                            <xs:maxInclusive value="255"/>
                                          </xs:restriction>
                                        </xs:simpleType>
                                      </xs:element>
                                      <xs:element name="graphic" maxOccurs="1" minOccurs="0">
